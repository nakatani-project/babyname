<h1>Listing nicknames</h1>

<table>
  <tr>
    <th>Baby</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nicknames.each do |nickname| %>
  <tr>
    <td><%= nickname.baby_id %></td>
    <td><%= nickname.name %></td>
    <td><%= link_to 'Show', nickname %></td>
    <td><%= link_to 'Edit', edit_nickname_path(nickname) %></td>
    <td><%= link_to 'Destroy', nickname, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

